{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "startCommand": "echo 'Service is idle. Scheduled jobs will run at their designated times.'",
    "crons": [
      {
        "schedule": "0 */3 * * *",
        "command": "python src/vulture.py reddit"
      },
      {
        "schedule": "0 */2 * * *",
        "command": "python src/vulture.py news"
      },
      {
        "schedule": "0 12 * * *",
        "command": "python src/vulture.py calendar"
      }
    ]
  }
}